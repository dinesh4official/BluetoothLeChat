<?xml version="1.0" encoding="UTF-8" ?>
<Label
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BluetoothLeChat.Views.Templates.FontIcon"
    x:Name="FontIconView"
    Text="{Binding Icon, Source={x:Reference FontIconView}}" Style="{StaticResource FontIconLabelStyle}"
    FontFamily="{Binding FontIconFamily, Source={x:Reference FontIconView}}"
    TextColor="{Binding IconColor, Source={x:Reference FontIconView}}"
    HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>